{
  "name": "http.request",
  "ctx": {
    "url": "http://www.filmweb.pl/search"
  },
  "next": {
    "name": "html.extract",
    "ctx": {
      "selectors": {
        "pathname": {
          "$extract": "href",
          "$path": "ul.resultsList li:first-child h3 a"
        }
      }
    },
    "next": {
      "name": "http.request",
      "ctx": {
        "scheme": "http",
        "hostname": "filmweb.pl"
      },
      "next": {
        "name": "html.extract",
        "ctx": {
          "selectors": {
            "original_title": "div.filmTitle h2",
            "description": "div.filmPlot p",
            "title": "div.filmTitle h1",
            "rating": "strong[rel='v:rating']",
            "countries": "div.filmInfo ul li a[href*='countryIds']",
            "genres": "ul.genresList li a",
            "directors": "div.filmInfo ul li a[rel='v:directedBy']",
            "writers": "div.filmInfo table tr:last-child ul li a[href*='person']",
            "year": {
              "$extract": "number",
              "$path": "#filmYear"
            },
            "poster": {
              "$extract": "href",
              "$path": "div.posterLightbox a"
            }
          }
        },
        "next": {
          "name": "filter.string.trim",
          "ctx": {
            "trim": ["rating"]
          }
        }
      }
    }
  }
}